@model AttendanceCRM.Models.Entities.ProjectAssignment

<h2>Edit Assignment</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="AssignmentId" />

    <div class="form-group">
        <label for="ProjectId">Project</label>
        <select asp-for="ProjectId" asp-items="@(new SelectList(ViewData["Projects"] as List<AttendanceCRM.Models.Entities.ProjectEntity>, "ProjectId", "ProjectName"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label for="TeamLeadId">Team Lead</label>
        <select asp-for="TeamLeadId" asp-items="@(new SelectList(ViewData["Users"] as List<AttendanceCRM.Models.Entities.UserMasterEntitie>, "UserId", "UserName"))" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
