@model AttendanceCRM.Models.Entities.ProjectAssignment

<h2>Delete Assignment</h2>
<p>Are you sure you want to delete this assignment?</p>
<p><strong>Project:</strong> @Model.Project.ProjectName</p>
<p><strong>Team Lead:</strong> @Model.TeamLead.UserName</p>
<p><strong>Assigned On:</strong> @Model.AssignedOn.ToString("yyyy-MM-dd")</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="AssignmentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
