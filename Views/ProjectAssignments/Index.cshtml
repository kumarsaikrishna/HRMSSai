@model IEnumerable<AttendanceCRM.Models.Entities.ProjectAssignment>

<h2>Project Assignments</h2>
<a asp-action="Create" class="btn btn-primary">Create New Assignment</a>
<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Project</th>
            <th>Team Lead</th>
            <th>Assigned On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Project.ProjectName</td>
                <td>@item.TeamLead.UserName</td>
                <td>@item.AssignedOn.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AssignmentId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.AssignmentId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.AssignmentId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
