@model AttendanceCRM.Models.Entities.SprintViewModel

@{
    ViewData["Title"] = "Sprint Details";
}

<h2>Sprint Details</h2>

<table class="table table-bordered">
    <tr>
        <th>Sprint Name:</th>
        <td>@Model.SprintName</td>
    </tr>
    <tr>
        <th>Project Name:</th>
        <td>@Model.ProjectName</td>
    </tr>
    <tr>
        <th>Start Date:</th>
        <td>@(Model.StartDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
    </tr>
    <tr>
        <th>End Date:</th>
        <td>@(Model.EndDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
    </tr>

    <tr>
        <th>Status:</th>
        <td>@Model.Status</td>
    </tr>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
<a asp-action="Edit" asp-route-id="@Model.SprintId" class="btn btn-warning">Edit</a>
<a asp-action="Delete" asp-route-id="@Model.SprintId" class="btn btn-danger">Delete</a>
