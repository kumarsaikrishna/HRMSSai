@model AttendanceCRM.Models.Entities.SprintViewModel


@{
    ViewData["Title"] = "Delete Sprint";
}

<h2>Are you sure you want to delete this Sprint?</h2>

<table class="table table-bordered">
    <tr>
        <th>Sprint Name:</th>
        <td>@Model.SprintName</td>
    </tr>
    <tr>
        <th>Project Name:</th>
        <td>@Model.ProjectName</td>
    </tr>
    <tr>
        <th>Start Date:</th>
        <td>@(Model.StartDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
    </tr>
    <tr>
        <th>End Date:</th>
        <td>@(Model.EndDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
    </tr>

    <tr>
        <th>Status:</th>
        <td>@Model.Status</td>
    </tr>
</table>

<form asp-action="Delete">
    <input type="hidden" asp-for="SprintId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
