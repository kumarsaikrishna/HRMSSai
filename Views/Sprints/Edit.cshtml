@model AttendanceCRM.Models.Entities.SprintEntity

@{
    ViewData["Title"] = "Edit Sprint";
}

<h2>Edit Sprint</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="SprintId" />

    <div class="form-group">
        <label asp-for="SprintName"></label>
        <input asp-for="SprintName" class="form-control" />
        <span asp-validation-for="SprintName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProjectId">Project</label>
        <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.Projects">
            <option value="">-- Select Project --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control">
            <option value="Planned">Planned</option>
            <option value="In Progress">In Progress</option>
            <option value="Completed">Completed</option>
        </select>
    </div>

    <button type="submit" class="btn btn-warning">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
