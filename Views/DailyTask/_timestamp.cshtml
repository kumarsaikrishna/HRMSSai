@model List<AttendanceCRM.Models.Entities.WorkEntryViewModel>
@{
    var totalRecords = Model.Count();
}
<h5>📊 Task Summary</h5>
<hr />

@if (Model.Any())
{
    <h5><i class="fas fa-user"></i> @Model.First().UserName</h5>
    <hr />
    <div class="row text-center">
        <div class="col-md-3">
            <h6><i class="fas fa-clock"></i> @Model.Sum(task => task.TimeSpent) min</h6>
            <p>@((Model.Sum(task => task.TimeSpent) / 60.0).ToString("0.##")) hrs</p>
        </div>
        <div class="col-md-2">
            <h6><i class="fas fa-list text-primary"></i> @totalRecords</h6>
        </div>
        <div class="col-md-2">
            <h6><i class="fas fa-check-circle text-success"></i> @Model.Count(task => task.Status == "Completed")</h6>
        </div>
        <div class="col-md-2">
            <h6><i class="fas fa-spinner text-warning"></i> @Model.Count(task => task.Status == "In Progress")</h6>
        </div>
        <div class="col-md-2">
            <h6><i class="fas fa-calendar-alt text-primary"></i> @Model.Count(task => task.Status == "Planned")</h6>
        </div>
    </div>
}
else
{
    <p class="text-center text-muted">No tasks available.</p>
}
