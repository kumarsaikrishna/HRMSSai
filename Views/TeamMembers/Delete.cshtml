@model AttendanceCRM.Models.Entities.TeamMemberEntity

@{
    ViewData["Title"] = "Delete Team Member";
}

<h2>Are you sure you want to delete this team member?</h2>

<div class="card border-danger">
    <div class="card-body">
        <h5>Project: @Model.Project.ProjectName</h5>
        <p><strong>Team Lead:</strong> @Model.TeamLead.UserName</p>
        <p><strong>Member:</strong> @Model.Member.UserName</p>
        <p><strong>Role:</strong> @Model.Role</p>
        <p><strong>Assigned On:</strong> @Model.AssignedOn.ToShortDateString()</p>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="TeamMemberId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
