@model AttendanceCRM.Models.DTOS.EmployeeDetailsViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet"> 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .profile-img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: 3px solid #007bff;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card p-4">
            <div class="text-center">
                <img src="@Url.Content("~/UploadedImages/" + (string.IsNullOrEmpty(Model.ProfilePicture) ? "default-profile.png" : Model.ProfilePicture))"
                     class="profile-img" alt="Profile Picture">
                <h3 class="mt-2">@Model.Name</h3>
                <p class="text-muted">@Model.Role</p>
            </div>

            <hr>

            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary">Employee Information</h5>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Phone:</strong> @Model.ContactNumber</p>
                    <p><strong>Department:</strong> @Model.department</p>
                    <p><strong>Joining Date:</strong> @(Model.JoinDate.HasValue ? Model.JoinDate.Value.ToString("dd MMM yyyy") : "Not Available")</p>

                </div>

                <div class="col-md-6">
                    <h5 class="text-primary">Performance</h5>
                    <p><strong>Total Hours Worked:</strong> @Model.TotalHoursWorked</p>
                    <p><strong>Performance:</strong> @Model.Performance%</p>
                </div>
            </div>

            <hr>

            <div class="text-center">
                <a href="@Url.Action("AdminDash", "Home")" class="btn btn-secondary">Back to Dashboard</a>
            </div>
        </div>
    </div>
</body>
</html>

