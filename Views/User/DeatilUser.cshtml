@model AttendanceCRM.Models.DTOS.UserMasterDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var passwordField = document.getElementById("passwordField");
        var togglePassword = document.getElementById("togglePassword");

        togglePassword.addEventListener("click", function () {
            var icon = this.querySelector("i");

            if (passwordField.type === "password") {
                passwordField.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                passwordField.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        });
    });
</script>

<!-- View Employee Details -->
<div class="col-xl-12 box-margin height-card">
    <div class="card">
        <div class="card-body">
            <div class="modal-header">
                <div class="d-flex align-items-center">
                    <h4 class="modal-title me-2">Employee Details</h4>
                </div>
            </div>
            <div class="tab-content" id="myTabContent2">
                <div class="tab-pane fade show active" id="basic-info2" role="tabpanel">
                    <div class="modal-body pb-0">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="d-flex align-items-center flex-wrap row-gap-3 bg-light w-100 rounded p-3 mb-4">
                                    <div class="d-flex align-items-center justify-content-center avatar avatar-xxl rounded-circle border border-dashed me-2 flex-shrink-0 text-dark frames">
                                        <img src="@Url.Content("~/UploadedImages/" + Model.ProfilePicture)" class="img-fluid" style="width: 50px; height: 50px; border-radius: 50%;">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3 mb-3">
                                        <label class="col-form-label">Employee ID</label>
                                        <p class="form-control-plaintext">@Model.EmployeeId</p>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label class="col-form-label">Name</label>
                                        <p class="form-control-plaintext">@Model.UserName</p>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label class="col-form-label">Date of Joining</label>
                                        <p class="form-control-plaintext">@Model.DateOfJoining?.ToString("yyyy-MM-dd")</p>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label class="col-form-label">Date of Birth</label>
                                        <p class="form-control-plaintext">@Model.DateOfBirth?.ToString("yyyy-MM-dd")</p>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label class="col-form-label">Mobile Number</label>
                                        <p class="form-control-plaintext">@Model.MobileNumber</p>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label class="col-form-label">Guardian Number</label>
                                        <p class="form-control-plaintext">@Model.GuardianNumber</p>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label class="col-form-label">College Name</label>
                                        <p class="form-control-plaintext">@Model.CollegeName</p>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label class="col-form-label">Designation</label>
                                        <p class="form-control-plaintext">@Model.Designation</p>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label class="col-form-label">Aadhar Number</label>
                                        <p class="form-control-plaintext">@Model.AdharNumber</p>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label class="col-form-label">Pan Number</label>
                                        <p class="form-control-plaintext">@Model.PanNumber</p>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label class="col-form-label">Address</label>
                                        <p class="form-control-plaintext">@Model.Address</p>
                                    </div>
                                    
                                     <div class="form-group col-md-3 mb-3">
                            <label class="col-form-label">Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="passwordField" name="Password" value="@Model.Password" placeholder="Password">
                                <div class="input-group-append">
                                    <button type="button" class="btn btn-outline-secondary" id="togglePassword">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a href="~/User/UserList" class="btn btn-primary">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 
